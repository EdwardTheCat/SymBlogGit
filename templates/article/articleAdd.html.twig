{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% block body %}

{{ form_start(form) }}
{{ form_widget(form) }}

    {{ form_row(form.title) }}
    {{ form_row(form.content) }}
    {{ form_row(form.author) }}
    {{ form_row(form.image) }}
    {% if action == true %}
        <input type="submit" value="Add Article"/>
    {% else %}
        <input type="submit" value="Modify Article"/>
    {% endif %}
{{ form_end(form) }}
{% endblock %}

